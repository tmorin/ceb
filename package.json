{
  "name": "ceb",
  "private": true,
  "workspaces": [
    "./packages/*"
  ],
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run --stream build",
    "canary": "npm run canary:version && npm run canary:publish",
    "canary:publish": "lerna publish --canary from-package --yes",
    "canary:version": "lerna version --no-changelog --no-git-tag-version prerelease --yes && git add -A && git commit -am 'chore(release): pre-release'",
    "doc:book": "mdbook clean && mdbook build",
    "doc:book:serve": "mdbook serve",
    "doc:book:watch": "mdbook watch",
    "doc:typedoc": "typedoc",
    "gdiag": "gdiag --wd book",
    "lerna": "lerna",
    "lint": "eslint .",
    "release:publish": "lerna publish from-package --yes",
    "release:version": "lerna version --conventional-commits --conventional-graduate",
    "test": "lerna run --stream test",
    "test:watch": "lerna run --stream test:watch"
  },
  "devDependencies": {
    "@tmorin/plantuml-libs": "^6.0.1",
    "@types/chai": "^4.2.22",
    "@types/chai-as-promised": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/sinon": "^10.0.6",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "electron": "^16.0.2",
    "eslint": "^8.3.0",
    "eslint-plugin-node": "^11.1.0",
    "karma": "^6.3.9",
    "karma-chrome-launcher": "^3.1.0",
    "karma-cli": "^2.0.0",
    "karma-electron": "^7.1.0",
    "karma-firefox-launcher": "^2.1.2",
    "karma-mocha": "^2.0.1",
    "karma-webpack": "^5.0.0",
    "lerna": "^4.0.0",
    "mocha": "^9.1.3",
    "prettier": "^2.5.0",
    "process": "^0.11.10",
    "puppeteer": "^12.0.1",
    "sinon": "^12.0.1",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "typedoc": "^0.22.10",
    "typescript": "^4.5.2",
    "util": "^0.12.4",
    "webpack": "^5.64.4",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.6.0",
    "webpack-merge": "^5.8.0"
  }
}
